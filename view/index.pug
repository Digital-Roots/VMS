extends layout

block content
  .main.container
    .row(style='')
      .mx-auto.col-md-6.col-10.bg-white.p-5
        h1.mb-4 Log in
        form(method='POST' action='/login')
          .form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          .form-group.mb-3
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          button.btn.btn-primary(type='submit') Submit
        footer
          p UserName: admin@example.com Password: Admin
